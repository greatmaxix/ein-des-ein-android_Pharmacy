<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/nav_sign_in">

    <include app:graph="@navigation/graph_home" />

    <argument
        android:name="authResultDestination"
        android:defaultValue="@null"
        app:argType="string"
        app:nullable="true" />

    <fragment
        android:id="@+id/nav_sign_in"
        android:name="com.pharmacy.myapp.auth.SignInFragment"
        android:label="@null"
        tools:layout="@layout/fragment_sign_in">

        <argument
            android:name="authResultDestination"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/actionFromSignInToSignUp"
            app:destination="@id/nav_sign_up"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_sign_in" />

        <action
            android:id="@+id/actionFromSignInToCode"
            app:destination="@id/nav_code"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

        <action
            android:id="@+id/actionFromSignToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

    </fragment>

    <fragment
        android:id="@+id/nav_sign_up"
        android:name="com.pharmacy.myapp.auth.SignUpFragment"
        android:label="@null"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/actionFromSignUpToCode"
            app:destination="@id/nav_code"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

        <action
            android:id="@+id/actionFromSignUpToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

    </fragment>

    <fragment
        android:id="@+id/nav_code"
        android:name="com.pharmacy.myapp.auth.CodeFragment"
        android:label="@null"
        tools:layout="@layout/fragment_code">

        <action
            android:id="@+id/actionFromCodeToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>
