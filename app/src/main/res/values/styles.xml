<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/primaryBlue</item>

        <item name="android:includeFontPadding">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowBackground">@drawable/ic_logo_bg</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4.H1</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5.H2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6.H3</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button.Button</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1.Subhead18</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2.Subhead14</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1.Body</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2.SmallBody</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption.Caption</item>
        <item name="textAppearanceCaption2">@style/TextAppearance.MaterialComponents.Caption.Caption2</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline.ExtraSmall</item>
    </style>

    <style name="TextSubhead14Blue">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="TextExtraSmall10White">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">@color/colorGlobalWhite</item>
    </style>

    <style name="TextBody16BlueLight">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="TextExtraSmall10Gray">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ProgressContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">@dimen/_100sdp</item>
        <item name="android:background">@color/colorProgressBackground</item>
    </style>

    <style name="BaseTextSkip">
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:background">@drawable/background_default_ripple_selector_rect</item>
        <item name="android:text">@string/skip</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/colorGlobalWhite</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="boxStrokeColor">@color/primaryBlue</item>
    </style>

    <style name="TextInputAuthStyle" parent="TextInputStyle">
        <item name="android:layout_marginHorizontal">@dimen/_16sdp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="TextAuthFooter">
        <item name="android:paddingHorizontal">@dimen/_4sdp</item>
        <item name="android:paddingVertical">@dimen/_8sdp</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">@dimen/_78sdp</item>
        <item name="android:layout_height">@dimen/_78sdp</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="AppToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <style name="InactiveText">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ActiveText">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <!--shapeAppearanceOverlay-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_8sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_8sdp</item>
    </style>

    <style name="SearchCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlayOrdersDelivery.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/_16sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_16sdp</item>
    </style>

    <style name="OrdersDeliveryCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayOrdersDelivery.MaterialCardView.Cut
        </item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_corners</item>
    </style>

    <style name="TagChipText">
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="BaseButton">
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorGlobalWhite</item>
        <item name="android:backgroundTint">@color/primaryBlue</item>
        <item name="cornerRadius">@dimen/_16sdp</item>
    </style>

    <style name="ToggleButtonCart" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/colorTransparent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/primaryBlue</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@color/primaryBlue</item>
    </style>

    <style name="ScrollStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="NestedScrollStyle" parent="ScrollStyle">
        <item name="android:fillViewport">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CustomRating" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/_33sdp</item>
        <item name="android:minWidth">@dimen/_33sdp</item>
        <item name="android:progressDrawable">@drawable/selector_rating_bar</item>
    </style>

    <style name="AuthSearchView" parent="AppTheme">
        <item name="colorAccent">@color/colorSearch</item>
        <item name="android:textColorPrimary">@color/colorSearch</item>
    </style>

    <style name="ChipOrders" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text_color_my_orders</item>
        <item name="android:gravity">center</item>
        <item name="chipBackgroundColor">@color/chip_background_color_my_orders</item>
        <item name="chipCornerRadius">@dimen/_6sdp</item>
        <item name="chipSurfaceColor">@color/colorTransparent</item>
        <item name="rippleColor">@color/chip_ripple_color_my_orders</item>
        <item name="tabTextAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">?android:textColorSecondary</item>
        <item name="tabTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>
</resources>