<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitleChatType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_15sdp"
        android:text="@string/chooseConsultationType"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPharmacistChatType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardBackgroundColor="@color/colorGlobalWhite"
        app:cardCornerRadius="@dimen/_200sdp"
        app:cardElevation="@dimen/_6sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/cardDoctorChatType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleChatType">

        <ImageView
            android:id="@+id/ivPharmacistChatType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_ripple_selector_chat_type"
            android:contentDescription="@string/pharmacistTypeContentDescription"
            android:src="@drawable/ic_type_pharmacist" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDoctorChatType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        app:cardBackgroundColor="@color/colorGlobalWhite"
        app:cardCornerRadius="@dimen/_200sdp"
        app:cardElevation="@dimen/_6sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardPharmacistChatType"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleChatType">

        <ImageView
            android:id="@+id/ivDoctorChatType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_ripple_selector_chat_type"
            android:contentDescription="@string/doctorTypeContentDescription"
            android:src="@drawable/ic_type_doctor" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPharmacistChatType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_15sdp"
        android:text="@string/pharmacistType"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cardPharmacistChatType"
        app:layout_constraintStart_toStartOf="@+id/cardPharmacistChatType"
        app:layout_constraintTop_toBottomOf="@+id/cardPharmacistChatType" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDoctorChatType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_15sdp"
        android:text="@string/doctorType"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cardDoctorChatType"
        app:layout_constraintStart_toStartOf="@+id/cardDoctorChatType"
        app:layout_constraintTop_toBottomOf="@+id/cardDoctorChatType" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextChatType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:gravity="center"
        android:paddingVertical="@dimen/_14sdp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorGlobalWhite"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:cornerRadius="@dimen/_90sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDoctorChatType" />

</androidx.constraintlayout.widget.ConstraintLayout>