<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyLight"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layoutDirection="locale" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_24sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCardAddPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/background_default_ripple_selector_rect"
            app:cardBackgroundColor="@color/colorGlobalWhite"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_1sdp"
            app:rippleColor="@color/colorRippleBlue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:src="@drawable/ic_credit_card" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtvTitleCardAddPayment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/creditOrDebitCard"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/darkBlue" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOtherAddPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:foreground="@drawable/background_default_ripple_selector_rect"
            app:cardBackgroundColor="@color/colorGlobalWhite"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_1sdp"
            app:rippleColor="@color/colorRippleBlue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivIconOtherAddPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:src="@drawable/ic_dollar_sign" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtvTitleOtherAddPayment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/otherPayment"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    android:textColor="@color/darkBlue" />

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>