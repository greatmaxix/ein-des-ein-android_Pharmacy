<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingTop="@dimen/_24sdp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResumeChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="@dimen/_7sdp"
        android:text="@string/chatResumeButton"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/colorGlobalWhite"
        app:cornerRadius="@dimen/_8sdp"
        app:elevation="@dimen/_4sdp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEndChat"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="@dimen/_7sdp"
        android:text="@string/chatEndButton"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/red"
        app:backgroundTint="@color/colorGlobalWhite"
        app:cornerRadius="@dimen/_8sdp"
        app:elevation="@dimen/_4sdp"
        app:strokeColor="@color/red"
        app:strokeWidth="@dimen/_1sdp" />

</LinearLayout>