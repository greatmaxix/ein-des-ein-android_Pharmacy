<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_136sdp"
    android:background="@color/colorGlobalWhite"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/ivProductImageCart"
        android:layout_width="@dimen/_112sdp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_vaccine"
        android:contentDescription="@string/cartImageContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductTitleCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/recommendedFavoriteCart"
        app:layout_constraintStart_toEndOf="@+id/ivProductImageCart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название товара" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductDescriptionCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@id/recommendedFavoriteCart"
        app:layout_constraintStart_toStartOf="@+id/tvProductTitleCart"
        app:layout_constraintTop_toBottomOf="@+id/tvProductTitleCart"
        tools:text="Название товара" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductIssuerCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/recommendedFavoriteCart"
        app:layout_constraintStart_toStartOf="@+id/tvProductTitleCart"
        app:layout_constraintTop_toBottomOf="@+id/tvProductDescriptionCart"
        tools:text="Название товара" />

    <ImageView
        android:id="@+id/recommendedFavoriteCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:background="@drawable/background_default_ripple_selector_circle"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/primaryBlue">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:icon="@drawable/ic_minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/darkBlue"
            android:textStyle="bold"
            tools:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:icon="@drawable/ic_plus_cart" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fabProductPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:textColor="@color/primaryBlue"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton"
        app:layout_constraintStart_toStartOf="@+id/tvProductTitleCart"
        tools:text="от 568 ₽" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@color/grey20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProductImageCart" />

</androidx.constraintlayout.widget.ConstraintLayout>