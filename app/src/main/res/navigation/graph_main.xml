<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/nav_splash">

    <include app:graph="@navigation/graph_auth" />
    <include app:graph="@navigation/graph_profile" />
    <include app:graph="@navigation/graph_profile_guest" />
    <include app:graph="@navigation/graph_home" />
    <include app:graph="@navigation/graph_payments" />
    <include app:graph="@navigation/graph_cart" />
    <include app:graph="@navigation/graph_checkout_map" />
    <include app:graph="@navigation/graph_onboarding" />

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.pharmacy.myapp.splash.SplashFragment"
        android:label="@null"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/fromSplashToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/fromSplashToAuth"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/fromSplashToOnboarding"
            app:destination="@id/onboarding_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/globalToChat"
        app:destination="@id/nav_chat"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.pharmacy.myapp.chat.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat">

        <action
            android:id="@+id/actionChatToSignIn"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

        <action
            android:id="@+id/actionChatToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/home_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/actionChatToChatReviewBottomSheet"
            app:destination="@id/nav_chat_review"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

        <action
            android:id="@+id/actionChatToSendImageBottomSheet"
            app:destination="@id/nav_send_image"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

    </fragment>

    <dialog
        android:id="@+id/nav_chat_review"
        android:name="com.pharmacy.myapp.chat.dialog.ChatReviewBottomSheetDialogFragment"
        android:label="ChatReviewBottomSheet"
        tools:layout="@layout/dialog_chat_review" />

    <dialog
        android:id="@+id/nav_send_image"
        android:name="com.pharmacy.myapp.chat.dialog.SendBottomSheetDialogFragment"
        android:label="SendBottomSheet"
        tools:layout="@layout/dialog_send_photo_bottom_sheet" />

    <fragment
        android:id="@+id/nav_recipes"
        android:name="com.pharmacy.myapp.recipes.RecipesFragment"
        android:label="@string/recipesLabel"
        tools:layout="@layout/fragment_recipes" />

    <fragment
        android:id="@+id/nav_analyzes"
        android:name="com.pharmacy.myapp.analyzes.AnalyzesFragment"
        android:label="@string/analyzesLabel"
        tools:layout="@layout/fragment_analyzes" />

    <action
        android:id="@+id/globalToCheckoutMap"
        app:destination="@id/checkout_map_graph"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <action
        android:id="@+id/globalToQrCodeScanner"
        app:destination="@id/nav_qr_code_scanner"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_qr_code_scanner"
        android:name="com.pharmacy.myapp.qrCodeScanner.QrCodeScannerFragment"
        android:label="@string/qrCodeLabel"
        tools:layout="@layout/fragment_qr_code_scanner" />

    <action
        android:id="@+id/globalToCheckout"
        app:destination="@id/nav_checkout"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_checkout"
        android:name="com.pharmacy.myapp.checkout.CheckoutFragment"
        android:label="@string/checkoutLabel"
        tools:layout="@layout/fragment_checkout">

        <action
            android:id="@+id/actionCheckoutToPromoCodeDialog"
            app:destination="@id/nav_checkout_dialog_promo_code"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />

    </fragment>

    <dialog
        android:id="@+id/nav_checkout_dialog_promo_code"
        android:name="com.pharmacy.myapp.checkout.dialog.PromoCodeDialogFragment"
        tools:layout="@layout/dialog_promo_code" />

    <action
        android:id="@+id/globalToOrder"
        app:destination="@id/nav_order"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_order"
        android:name="com.pharmacy.myapp.order.OrderFragment"
        android:label="@null"
        tools:layout="@layout/fragment_order" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.pharmacy.myapp.search.SearchFragment"
        android:label="@null"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/fromSearchToAuth"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim" />
    </fragment>

    <action
        android:id="@+id/globalToProductCard"
        app:destination="@id/nav_product"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_product"
        android:name="com.pharmacy.myapp.product.ProductFragment"
        android:label="@null"
        tools:layout="@layout/fragment_product">
        <argument
            android:name="product"
            android:defaultValue="@null"
            app:argType="com.pharmacy.myapp.product.model.Product"
            app:nullable="true" />
    </fragment>

    <action
        android:id="@+id/globalToRegion"
        app:destination="@id/nav_region"
        app:enterAnim="@anim/nav_enter_anim"
        app:exitAnim="@anim/nav_exit_anim"
        app:popEnterAnim="@anim/nav_enter_pop_anim"
        app:popExitAnim="@anim/nav_exit_pop_anim" />

    <fragment
        android:id="@+id/nav_region"
        android:name="com.pharmacy.myapp.region.RegionFragment"
        android:label="@string/regionLabel"
        tools:layout="@layout/fragment_region" />

</navigation>