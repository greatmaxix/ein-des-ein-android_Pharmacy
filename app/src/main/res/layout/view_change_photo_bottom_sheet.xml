<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGlobalWhite"
    android:paddingBottom="@dimen/_12sdp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_28sdp"
        android:background="@drawable/background_default_ripple_selector_rect"
        android:padding="@dimen/_12sdp"
        android:text="@string/changePhotoGallery"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_28sdp"
        android:background="@drawable/background_default_ripple_selector_rect"
        android:padding="@dimen/_12sdp"
        android:text="@string/changePhotoCamera"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintTop_toBottomOf="@id/mtv_gallery" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_28sdp"
        android:background="@drawable/background_default_ripple_selector_rect"
        android:padding="@dimen/_12sdp"
        android:text="@string/changePhotoDelete"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintTop_toBottomOf="@id/mtv_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>
