<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyLight"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbarContainerOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layoutDirection="locale" />

        <com.pulse.ui.OrderSteps
            android:id="@+id/orderDetailsSteps"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/statusTitleOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_23sdp"
            android:gravity="center"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/orderWithIdCanceled"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/statusDescriptionOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:gravity="center"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone"
            tools:text="@string/orderCanceled"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_24sdp">

            <com.pulse.ui.BuyerDetailsOrder
                android:id="@+id/viewBuyerInfoOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvBuyerDetailsTitleOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/pharmacyAddress"
                android:textAppearance="@style/Text.BlockHeaderBold"
                app:layout_constraintEnd_toStartOf="@+id/tvBuyerDetailsEditOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.pulse.ui.PharmacyAddressOrder
                android:id="@+id/pharmacyAddressOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvNoteOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/primaryBlueLight20"
                app:cardCornerRadius="@dimen/_8sdp"
                app:contentPadding="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@+id/mcvInstruction"
                app:strokeWidth="@dimen/_1sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvNoteOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/_12ssp"
                    tools:text="Оставьте у двери, предварительно позвонив 4 раза в дверь" />

            </com.google.android.material.card.MaterialCardView>

            <com.pulse.ui.BuyerDeliveryAddressOrder
                android:id="@+id/viewBuyerDeliveryAddressOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/paymentType"
                android:textAppearance="@style/Text.BlockHeaderBold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardBackgroundColor="@color/colorGlobalWhite"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/_8sdp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPaymentTypeOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    tools:drawableEnd="@drawable/ic_google_pay"
                    tools:text="Google Pay" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/orderList"
                android:textAppearance="@style/Text.BlockHeaderBold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductsOrderDetails"
                style="@style/ScrollStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:layout_height="@dimen/_164sdp"
                tools:listitem="@layout/item_checkout_product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/totalPayable"
                    android:textColor="@color/darkBlue"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotalPayableOrderDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryBlue"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    tools:text="382 ₸" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelOrder"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="@string/cancelOrderDetails"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:visibility="gone"
                app:backgroundTint="@color/colorGlobalWhite"
                app:cornerRadius="@dimen/_20sdp"
                app:strokeColor="@color/primaryBlue" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>