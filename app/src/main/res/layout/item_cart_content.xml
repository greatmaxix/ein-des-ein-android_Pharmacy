<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGlobalWhite"
    android:paddingStart="@dimen/_8sdp"
    android:paddingTop="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_4sdp">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:scaleType="centerInside"
        android:src="@drawable/main_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/background_default_ripple_selector_circle"
        android:padding="@dimen/_2sdp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.BlockHeaderBold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:ellipsize="end"
        android:gravity="center|start"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/ivRemove"
        app:layout_constraintEnd_toStartOf="@+id/ivRemove"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="@+id/ivRemove"
        tools:text="Название товара..." />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/Text.Filled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Таблетки шипучие, 20 мг" />

    <TextView
        android:id="@+id/tvManufacture"
        style="@style/Text.Filled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/tvProductPrice"
        app:layout_constraintEnd_toEndOf="@+id/ivRemove"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Производитель, Россия" />

    <TextView
        android:id="@+id/tvPriceUnavailable"
        style="@style/Text.Edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:text="@string/temporaryUnavailable"
        android:textColor="@color/greyText"
        android:textSize="@dimen/_11ssp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
        app:layout_constraintStart_toStartOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvProductPrice"
        style="@style/Text.Edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        tools:text="500000 Р" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/mbtgContainer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProductPrice">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbMinus"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_cart_minus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbCounter"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/darkBlue"
            android:textStyle="bold"
            tools:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbPlus"
            style="@style/ToggleButtonCart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            app:icon="@drawable/ic_cart_plus" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toBottomOf="@+id/mbtgContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>