<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.pharmacy.myapp.home.HomeFragment"
        android:label="@null"
        tools:layout="@layout/fragment_home">

    </fragment>

    <action
        android:id="@+id/globalToQrCodeScanner"
        app:destination="@id/nav_qr_code_scanner" />

    <fragment
        android:id="@+id/nav_qr_code_scanner"
        android:name="com.pharmacy.myapp.qrCodeScanner.QrCodeScannerFragment"
        android:label="@string/qrCodeLabel"
        tools:layout="@layout/fragment_qr_code_scanner" />

    <action
        android:id="@+id/globalToDevTools"
        app:destination="@id/nav_dev_tools" />

    <fragment
        android:id="@+id/nav_dev_tools"
        android:name="com.pharmacy.myapp.devTools.DevToolsFragment"
        android:label="@string/devToolsLabel"
        tools:layout="@layout/fragment_dev_tools" />

    <action
        android:id="@+id/globalToProductCard"
        app:destination="@id/nav_product_card" />

    <fragment
        android:id="@+id/nav_product_card"
        android:name="com.pharmacy.myapp.productCard.ProductCardFragment"
        android:label="@null"
        tools:layout="@layout/fragment_product_card" />

    <action
        android:id="@+id/globalToCheckout"
        app:destination="@id/nav_checkout" />

    <fragment
        android:id="@+id/nav_checkout"
        android:name="com.pharmacy.myapp.checkout.CheckoutFragment"
        android:label="@string/checkoutLabel"
        tools:layout="@layout/fragment_checkout">

        <action
            android:id="@+id/actionCheckoutToPromoCodeDialog"
            app:destination="@id/nav_checkout_dialog_promo_code" />

    </fragment>

    <dialog
        android:id="@+id/nav_checkout_dialog_promo_code"
        android:name="com.pharmacy.myapp.checkout.dialog.PromoCodeDialogFragment"
        tools:layout="@layout/dialog_promo_code" />

    <action
        android:id="@+id/globalToOrder"
        app:destination="@id/nav_order" />

    <fragment
        android:id="@+id/nav_order"
        android:name="com.pharmacy.myapp.order.OrderFragment"
        android:label="@null"
        tools:layout="@layout/fragment_order" />

</navigation>
