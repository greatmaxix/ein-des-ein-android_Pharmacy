<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mtv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/onboarding_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_6sdp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/colorGlobalWhite"
        app:layout_constraintBottom_toTopOf="@+id/mtv_subtitle"
        app:layout_constraintEnd_toEndOf="@+id/mtv_subtitle"
        app:layout_constraintStart_toStartOf="@+id/mtv_subtitle"
        tools:text="@string/onboarding_title_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/colorGlobalWhite"
        app:layout_constraintBottom_toTopOf="@+id/mb_next"
        app:layout_constraintEnd_toEndOf="@+id/mb_next"
        app:layout_constraintStart_toStartOf="@+id/mb_next"
        tools:text="@string/onboarding_subtitle_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="@dimen/_8sdp"
        android:text="@string/proceedAuth"
        android:textAppearance="?attr/textAppearanceButton"
        app:cornerRadius="@dimen/_90sdp"
        app:layout_constraintBottom_toTopOf="@+id/mtv_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_skip"
        style="@style/BaseTextSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/colorGlobalWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>