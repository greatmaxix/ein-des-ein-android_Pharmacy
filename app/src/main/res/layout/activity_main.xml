<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/navHost"
        android:name="com.pharmacy.myapp.main.MainNavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        app:defaultNavHost="true"
        app:navGraph="@navigation/graph_main" />

    <include layout="@layout/layout_progress" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:translationY="?actionBarSize"
        app:itemBackground="?attr/colorPrimary"
        app:itemIconTint="@color/selector_navigation_item"
        app:itemTextAppearanceActive="@style/Text.Small"
        app:itemTextAppearanceInactive="@style/Text.Tiny"
        app:itemTextColor="@color/colorGlobalWhite"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation" />

</FrameLayout>