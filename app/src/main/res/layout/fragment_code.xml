<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageButton
        android:id="@+id/btnBackCode"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/primaryBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/main_icon"
        app:layout_constraintBottom_toTopOf="@id/mtvTitleCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvTitleCode"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/codeConfirmation"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toTopOf="@id/mtvSubtitleCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvSubtitleCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="center"
        android:text="@string/enterCode"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toTopOf="@id/mtvPhoneCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvPhoneCode"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24sdp"
        android:textColor="@color/primaryBlue"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/etCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="+7 (000) 000–00–00" />

    <com.pharmacy.myapp.ui.SmsView
        android:id="@+id/etCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_36sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".55" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/codeNotReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не получили код?"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="@id/btnSendCodeAgain"
        app:layout_constraintEnd_toStartOf="@id/btnSendCodeAgain"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnSendCodeAgain" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendCodeAgain"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:padding="@dimen/_6sdp"
        android:text="@string/sendCodeAgain"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/codeNotReceived"
        app:layout_constraintTop_toBottomOf="@id/etCode" />

</androidx.constraintlayout.widget.ConstraintLayout>