<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/nav_splash">

    <include app:graph="@navigation/graph_auth" />
    <include app:graph="@navigation/graph_profile" />
    <include app:graph="@navigation/graph_home" />
    <include app:graph="@navigation/graph_search" />
    <include app:graph="@navigation/graph_payments" />

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.pharmacy.myapp.splash.SplashFragment"
        android:label="@null"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/fromSplashToHome"
            app:destination="@id/home_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/fromSplashToAuth"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/nav_enter_anim"
            app:exitAnim="@anim/nav_exit_anim"
            app:popEnterAnim="@anim/nav_enter_pop_anim"
            app:popExitAnim="@anim/nav_exit_pop_anim"
            app:popUpTo="@id/nav_splash"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/globalToQrCodeScanner"
        app:destination="@id/nav_qr_code_scanner" />

    <fragment
        android:id="@+id/nav_qr_code_scanner"
        android:name="com.pharmacy.myapp.qrCodeScanner.QrCodeScannerFragment"
        android:label="@string/qrCodeLabel"
        tools:layout="@layout/fragment_qr_code_scanner" />

</navigation>